#!/bin/bash

_CONFIG=/opt/retronas/config/retronas.cfg
source $_CONFIG
source ${LIBDIR}/common.sh

case $(basename $0 .sh) in
    minicom-config)
        DROP_ROOT /usr/bin/minicom -s
        [ $? -ne 0 ] && PAUSE
    ;;
    *)
        DROP_ROOT /usr/bin/minicom
        [ $? -ne 0 ] && PAUSE
    ;;
esac
