[Unit]
Description=MysticBBS Internet Server
Requires=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory=/opt/mysticbbs
ExecStart=/opt/mysticbbs/mis daemon
ExecStop=/opt/mysticbbs/mis shutdown
RestartSec=10s
TimeoutStartSec=8s
Restart=on-failure

[Install]
WantedBy=multi-user.target
